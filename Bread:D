<script>
    let bread = parseInt(prompt("How many breads do you want",5));
function eat(){
    bread--;
    if (bread < 0){
        console.error("You can't eat any more breads")
        }
        else{
            console.log("You have",bread,"bread left")
        }
}
</script>
